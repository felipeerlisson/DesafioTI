@model IEnumerable<DesafioTI.Models.Venda>
@{
    ViewData["Title"] = "Index";
}


<div id="cadastro">
    <section id="cadastro_cabeçalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <section id="cadastro_conteudo">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div id="cabecalho_grid" class="row">
                        <a id="btn_incluir" class="btn btn-success" role="button" href="@Url.Action("Create")"><i class="glyphicon glyphicon-plus">Incluir</i></a>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="grid_cadastro" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Valor)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IdItem)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Quantidade)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cliente)
                                        </th>
                                        <th>Ação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var venda in Model)
                                    {
                                        <tr>
                                            <td>@venda.Valor</td>
                                            <td>@venda.IdItem</td>
                                            <td>@venda.Quantidade</td>
                                            <td>@venda.Cliente</td>
                                            <td>
                                                <a class="btn btn-primary btn-alterar" role="button" href="@Url.Action("Edit", new { id = @venda.Id})"><i class="glyphicon glyphicon-pencil"></i>Alterar</a>
                                                <a class="btn btn-danger btn-excluir" role="button" href="@Url.Action("Delete", new { id= @venda.Id})" ><i class="glyphicon glyphicon-trash"></i>Excluir</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

